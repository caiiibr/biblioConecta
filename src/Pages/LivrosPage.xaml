<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Biblioconecta.ViewModels"
             xmlns:model="clr-namespace:Biblioconecta.Data.Models"
             x:Class="Biblioconecta.Pages.LivrosPage"
             x:DataType="vm:LivrosViewModel"
             Title="Meus livros">
    <Grid
        ColumnDefinitions="*"
        RowDefinitions="auto,auto,*"
        RowSpacing="20"
        Padding="10">

        <SearchBar
            Grid.Column="0"
            Grid.Row="0" 
            SearchCommand="{Binding SearchCommand}"
            SearchCommandParameter="{Binding SearchText}"
            Text="{Binding SearchText}"
            TextChanged="SearchBar_TextChanged"/>

        <CollectionView
            Grid.Column="0"
            Grid.Row="1"
            ItemsSource="{Binding Prateleiras}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Prateleira">
                    <Border
                        StrokeShape="RoundRectangle 14"
                        Padding="12,7">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:LivrosViewModel}}, Path=FilterCommand}"
                                CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                        
                        <Label
                            Text="{Binding Nome}">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding Id}" Value="{Binding Source={x:RelativeSource AncestorType={x:Type vm:LivrosViewModel}}, Path=PrateleiraId}">
                                    <Setter Property="FontFamily" Value="OpenSansSemibold" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <RefreshView
            Grid.Column="0"
            Grid.Row="2"
            Command="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsRefreshing}">

            <CollectionView
                ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Livro">
                        <Grid
                            ColumnDefinitions="auto,*,auto"
                            RowDefinitions="auto,auto"
                            ColumnSpacing="15"
                            Padding="10">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:LivrosViewModel}}, Path=EditCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>

                            <Image
                                Grid.Column="0"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Aspect="AspectFit"
                                Source="{Binding ImagemUrl}"
                                HeightRequest="90">
                                <Image.Shadow>
                                    <Shadow
                                        Brush="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray200}}"
                                        Offset="5,10"
                                        Radius="20"
                                        Opacity="0.25" />
                                </Image.Shadow>
                            </Image>
                            
                            <Border
                                Grid.Column="0"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                BackgroundColor="Transparent"
                                Stroke="{StaticResource Gray200}"
                                IsVisible="{Binding SemImageUrl}"
                                StrokeShape="RoundRectangle 8"
                                HeightRequest="90"
                                WidthRequest="60">
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border" Binding="{Binding ImagemUrl}" Value="">
                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}" />
                                    </DataTrigger>
                                </Border.Triggers>
                                <Border.Shadow>
                                    <Shadow
                                        Brush="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray200}}"
                                        Offset="5,10"
                                        Radius="20"
                                        Opacity="0.25" />
                                </Border.Shadow>

                                <Label
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Text="Sem&#10;imagem"/>

                            </Border>

                            <VerticalStackLayout
                                Grid.Column="1"
                                Grid.Row="0"
                                VerticalOptions="Start">
                                <Label
                                    FontFamily="OpenSansSemibold"
                                    FontSize="16"
                                    Text="{Binding Titulo}" />
                                <Label 
                                    Text="{Binding Autor}" />
                            </VerticalStackLayout>

                            <Grid
                                Grid.Column="1"
                                Grid.Row="1"
                                ColumnDefinitions="*,*"
                                RowDefinitions="auto"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Text="{Binding AnoPublicacao}" />
                                <Label
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Text="{Binding Paginas, StringFormat='{0} pÃ¡ginas'}" />
                            </Grid>

                            <Button
                                Grid.Column="2"
                                Grid.Row="0"
                                FontFamily="FontAwesomeRegular"
                                VerticalOptions="Center"
                                Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:LivrosViewModel}}, Path=FavoriteCommand}"
                                CommandParameter="{Binding .}"
                                Text="{StaticResource fa-heart}"
                                Style="{StaticResource IconButton}">
                                <Button.Triggers>
                                    <DataTrigger TargetType="Button" Binding="{Binding Favorito}" Value="True">
                                        <Setter Property="FontFamily" Value="FontAwesomeSolid" />
                                        <Setter Property="TextColor" Value="Red" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button
                                Grid.Column="2"
                                Grid.Row="1"
                                FontFamily="FontAwesomeRegular"
                                VerticalOptions="Center"
                                Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:LivrosViewModel}}, Path=DeleteCommand}"
                                CommandParameter="{Binding .}"
                                Text="{StaticResource fa-trash-can}"
                                Style="{StaticResource IconButton}">
                            </Button>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button
            Grid.Column="0"
            Grid.Row="2"
            Margin="16"
            HorizontalOptions="End"
            VerticalOptions="End"
            Command="{Binding EditCommand}"
            Text="{StaticResource fa-plus}"
            Style="{StaticResource Fab}"/>

    </Grid>
</ContentPage>